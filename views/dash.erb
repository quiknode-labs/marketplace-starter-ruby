<% if @error %>
  <p class="border-red-900 bg-red-100 p-6 my-6"><%= @error %></p>
<% end %>

<% if @decoded_token && @decoded_token["quicknode_id"] %>
  <p class="border-green-900 bg-green-100 p-6 my-6">JWT decoded for <%= @decoded_token["quicknode_id"] %> (<%= @decoded_token["email"] %>)</p>
<% end %>

<h2 class="text-xl tracking-tight font-bold text-gray-700 mb-6">Account: <%= params[:id] %></h2>

<% if @account_is_active %>
  <% if @endpoints.any? %>
    <% @endpoints.each do |endpoint| %>
      <% next if endpoint.endpoint_id.empty? %>
      <div class="my-6 p-4 border-gray-300">
        <h3 class="font-bold text-gray-700 mb-4">Endpoint: <%= endpoint.endpoint_id %></h3>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-500">No Endpoints</p>
  <% end %>
<% else %>
  <p class="text-gray-500">This account does not exist</p>
<% end %>
